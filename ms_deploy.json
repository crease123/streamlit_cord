{
  "name": "cord_modelscope",
  "display_name": "结绳记事",
  "description": "",
  "type": "web",
  "platform": "streamlit",
  "port": 8501,
  "command": "apt-get update && apt-get install -y portaudio19-dev python3-dev gcc && pip install pyaudio && streamlit run app.py",
  "requirements": [
    "streamlit",
    "dashscope",
    "openai",
    "psutil"
  ],
  "environment": {
    "PYTHONUNBUFFERED": "1"
  },
  "resources": {
    "cpu": 2,
    "memory": 16384
  },
  "image": "ubuntu22.04-py311-torch2.3.1-modelscope1.3.10",
  "license": "Apache License 2.0",
  "visibility": "public",
  "volumes": [
    {
      "name": "data",
      "path": "./data",
      "mount_path": "/app/data"
    }
  ],
  "health_check": {
    "path": "/",
    "timeout": 30,
    "interval": 5
  }
}